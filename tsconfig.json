{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "include": ["*.ts", "*.tsx", "**/*.ts", "**/*.tsx", "App.tsx"],
  "exclude": [
    "node_modules",
    ".eslintrc.js",
    "babel.config.js",
    "prettier.config.js",
    "__tests__/**/*-test.ts"
  ],
  "files": ["@types/index.d.ts"]
}
